@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rami: <https://w3id.org/i40/rami#> .


<#QualifierShape>
    a sh:QualifierShape  ;
    sh:path rami:Qualifier ; 
    sh:datatype xsd:string ; 
    sh:minCount 1 ;

    sh:property [
        sh:path rami:qualifierType ;
        sh:class rami:QualifierType ;
        sh:minCount 1 ;
        sh:maxCount 1 ; # MANDATORY!
        sh:severaty sh:Violation ;
        sh:message "Exactly one QualifierType instance is mandatory"@en^^^xsd:string ;
    ] ;

    sh:property [
        #TODO: IMPELEMENT THE CONTRAINTS (s. p. 43)
        sh:path rami:qualifierValue ;
        sh:class rami:PropertyValueType ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:severaty sh:Violation ;
        sh:message "qualifierValue of type PropertyValueType is optional"@en^^^xsd:string ;
    ] ;

    sh:property [
        sh:path rami:qualifierValueId ;
        sh:class rami:Reference ; # Reference is abstract and not defined
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:severaty sh:Violation ;
        sh:message "qualifierValueId is optional and of type Reference (abstract)" ;
    ] ;

    # inherits from Constraint
    # TODO: Implement!
    .

